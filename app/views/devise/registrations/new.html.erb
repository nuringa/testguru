<h2><%= t('devise.registrations.new.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control",autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <% if @minimum_password_length %>
      <em>(<%= t('.minimum_length', length: @minimum_password_length) %>)</em>
    <% end %><br />
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off",
          id: "password-control", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= octicon 'check', class: 'text-success hide' %>
      <%= octicon 'circle-slash', class: 'text-danger hide' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          id: "confirmation-control", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

