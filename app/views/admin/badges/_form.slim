= form_for [:admin, @badge] do |f|

  .form-group
    = f.label :name, class: 'col-form-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :url, class: 'col-form-label'
    .col-sm-10
      = f.select :url, Badge::BADGES_URLS, {}, { class: 'form-control' }
  .form-group
    = f.label :rule_value, class: 'col-form-label'
    .col-sm-10
      = f.text_field :rule_value, class: 'form-control'
  .form-group
    = f.label :rule_name, class: 'col-form-label'
    .col-sm-10
      = f.select :rule_name, Badge::RULE_VALUES, {}, { class: 'form-control' }

  p
    = f.submit
